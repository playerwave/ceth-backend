<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <style>
      table {
        width: 100%;
        border-collapse: collapse;
      }
      th,
      td {
        padding: 10px;
        text-align: left;
        border: 1px solid #ddd;
      }
      th {
        background-color: #f2f2f2;
      }
      /* สไตล์ของปุ่ม */
      a.button {
        display: inline-block;
        background-color: #4CAF50; /* สีเขียว */
        color: white;
        padding: 12px 20px;
        text-align: center;
        text-decoration: none;
        font-size: 16px;
        border-radius: 5px;
        transition: background-color 0.3s eace;
      }
      a.button:hover {
        background-color: #45a049; /* สีเขียวเข้มเมื่อ Hover */
      }
      a.button:active {
        background-color: #3e8e41; /* สีเขียวเข้มที่สุดเมื่อคลิก */
      }
    </style>
  </head>
  <body>
    <div>
      <a href="/users" class="button">Users</a>
      <a href="/eventCoop" class="button">Even Coop</a>
      <a href="/activity" class="button">Certificate</a>
      <a href="/question" class="button">Quetion</a>
      <a href="/assessment" class="button">Assessment</a>
      <a href="/activity" class="button">Activity</a>
      <a href="/activityAssessment" class="button">Activity Assessment</a>
      <a href="/userActivity" class="button">User Activity</a>
      <a href="/choice" class="button">Choice</a>
      <a href="/userChoice" class="button">User Choice</a>
    </div>
    <h1>Activity</h1>
    <table>
      <thead>
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th>Company Lecture</th>
          <th>Description</th>
          <th>Type</th>
          <th>Room</th>
          <th>Seat</th>
          <th>Food</th>
          <th>Status</th>
          <th>Start Register</th>
          <th>End Register</th>
          <th>Create Date</th>
          <th>Last Update</th>
          <th>Register Count</th>
          <th>Attended Count</th>
          <th>Not Attended Count</th>
          <th>Start Time</th>
          <th>End Time</th>
          <th>Normal Register</th>
          <th>Location_type</th>
          <th>State</th>
          <th>Recieve Hours</th>
          <th>Assessment ID</th>
          <th>Start Assessment</th>
          <th>End Assessment</th>
          <th>IMAGES & URL</th>
        </tr>
      </thead>
      <tbody>
        <% for(var i = 0; i < activity.length; i++){ %>
        <tr>
          <td><%= activity[i].ac_id %></td>
          <td><%= activity[i].ac_name %></td>
          <td><%= activity[i].ac_company_lecturer %></td>
          <td><%= activity[i].ac_description %></td>
          <td><%= activity[i].ac_type %></td>
          <td><%= activity[i].ac_room %></td>
          <td><%= activity[i].ac_seat %></td>
          <td><%= activity[i].ac_food %></td>
          <td><%= activity[i].ac_status %></td>
          <td><%= activity[i].ac_start_register %></td>
          <td><%= activity[i].ac_end_register %></td>
          <td><%= activity[i].ac_create_date %></td>
          <td><%= activity[i].ac_last_update %></td>
          <td><%= activity[i].ac_registered_count %></td>
          <td><%= activity[i].ac_attended_count %></td>
          <td><%= activity[i].ac_not_attended_count %></td>
          <td><%= activity[i].ac_start_time %></td>
          <td><%= activity[i].ac_end_time %></td>
          <td><%= activity[i].ac_normal_register %></td>
          <td><%= activity[i].ac_location_type %></td>
          <td><%= activity[i].ac_state %></td>
          <td><%= activity[i].ac_recieve_hours %></td>
          <td><%= activity[i].acsessment_id %></td>
          <td><%= activity[i].ac_start_assessment %></td>
          <td><%= activity[i].ac_end_assessment %></td>
          <td><%= activity[i].ac_image_url %></td>
        </tr>
        <% } %>
      </tbody>
    </table>

  </body>
</html>
